generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id    Int    @id @default(autoincrement())
  name  String
  email String? @unique
  appointments Appointment[]
}

model Appointment {
  id         Int      @id @default(autoincrement())
  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  doctorId   Int
  patientName String
  patientEmail String
  startTs    DateTime
  endTs      DateTime
  notes      String?
  
  @@unique([doctorId, startTs])
}
